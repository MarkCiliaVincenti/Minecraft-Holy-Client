<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

             x:Class="HolyClient.Views.ErrorView">
    <StackPanel HorizontalAlignment="Center" Spacing="10" VerticalAlignment="Center">
        <TextBlock Text="{Tr {Binding Description}}" HorizontalAlignment="Center" FontSize="17" />
        <TextBlock Text="{Tr {Binding ErrorText}}" Foreground="#ff5757" HorizontalAlignment="Center" FontSize="17" />
    </StackPanel>
</UserControl>