<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
			 xmlns:designTime="using:HolyClient.DesignTime"
			 x:CompileBindings="True"
			 
			 xmlns:vm="using:HolyClient.ViewModels"
			 x:DataType="vm:StressTestProcessViewModel"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HolyClient.Views.Pages.StressTest.StressTestProcessView">
	<Design.DataContext>
		<designTime:DesignStressTestProcessViewModel/>
	</Design.DataContext>
	<Grid Margin="20" ColumnDefinitions="Auto,*">
		<Grid ClipToBounds="True" RowDefinitions="*,*">
			<Border			
				Padding="10"
				CornerRadius="7"
				Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
				<StackPanel Spacing="12">
					<TextBlock Text="{Binding Host, Converter={TrStringFormatConverter TextId = 'StressTest.Process.InfoPanel.Server'}}"/>
					<TextBlock Text="{Binding Version, Converter={TrStringFormatConverter TextId = 'StressTest.Process.InfoPanel.Version'}}"/>
					<TextBlock Text="{Binding NumberOfBots, Converter={TrStringFormatConverter TextId = 'StressTest.Process.InfoPanel.NumberOfThreads'}}"/>

					<Button 
						Width="200"
						HorizontalAlignment="Center"
						Content="{Tr Cancel}"
						Command="{Binding CancelCommand}"/>
				</StackPanel>
			</Border>
			<Border 
				Grid.Row="1"
				Padding="0,10"
				Margin="0,10,0,0"
				CornerRadius="7" 
				ClipToBounds="False"
				Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
				<lvc:PieChart					
					x:Name="ProxyPieChart"
					Series="{Binding Proxy_Series}"	>
					
				</lvc:PieChart>
			</Border>
		</Grid>
		
		<Grid Grid.Column="1" Margin="10,0,0,0" RowDefinitions="*,*">
			<Grid RowDefinitions="Auto,*">


				<Border Padding="10" CornerRadius="7" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
					<TextBlock Text="Количество ботов"/>
				</Border>


				<Border
					Margin="0,5,0,0"
					Grid.Row="1"
					Padding="10"
					CornerRadius="7"
					Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
					<lvc:CartesianChart
						SyncContext="{Binding Online_Sync}"
						XAxes="{Binding XAxes}"
						Series="{Binding BotsOnline_Series}"/>
				</Border>
			</Grid>

			<Grid Grid.Row="1" RowDefinitions="Auto,*">
				<Border
					Margin="0,10,0,0"
					Grid.Row="0"
					Padding="10"
					CornerRadius="7"
					Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
					<TextBlock Text="Подключения в секунду"/>
				</Border>

				<Border
					Margin="0,5,0,0"
					Grid.Row="1"
					Padding="10"
					CornerRadius="7"
					Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">

					<lvc:CartesianChart
						SyncContext="{Binding CPS_Sync}"
						XAxes="{Binding XAxes}"
						Series="{Binding CPS_Series}"/>
				</Border>
			</Grid>
		</Grid>
	</Grid>


</UserControl>
